<h1>Editing article</h1>
<%= form_for :article, url: article_path(@article), method: :patch do |f| %>
  <%= render "shared/errors", object: :article %>
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :text %><br>
    <%= f.text_area :text %>
  </p>

  <p>
    <%= f.submit %>
  </p>

<% end %>
<%= link_to 'Back', articles_path %>
